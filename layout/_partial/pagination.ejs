<nav id="pagination">
  <% if (page.prev){ %>
    <a href="<%- config.root %><%- page.prev_link %>" class="prev"><span id="prev"><%= __('prev') %></span></a>
  <% } %>
  <% if (page.next){ %>
    <a href="<%- config.root %><%- page.next_link %>" class="next"><span id="next"><%= __('next') %></span></a>
  <% } %>
  <div class="clearfix"></div>
</nav>